<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/shape_share_dialog_back_white"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:layout_marginBottom="24dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageButton
            android:layout_gravity="right|center_vertical|center_horizontal|center|end"
            android:id="@+id/dialog_close"
            android:background="@drawable/selector_dialog_btn_rt"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:srcCompat="@drawable/ic_close_black_24dp" />
    </FrameLayout>

    <View
        android:background="@color/dividers_dark"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <ListView
        android:id="@+id/dialog_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/dividers_dark"
        android:dividerHeight="1dp" />
</LinearLayout>
